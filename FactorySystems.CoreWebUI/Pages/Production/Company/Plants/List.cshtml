@page
@model FactorySystems.CoreWebUI.Pages.Production.Company.Plants.ListModel
@{
    ViewData["Title"] = "List";
}

<h3>Plant List</h3>

<div>
    <table class="table display">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.PlantVM.PlantId)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.PlantVM.Name)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.PlantVM.City)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.PlantVM.Address)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.PlantVM.Phone)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.PlantVM.Email)</th>
                <th scope="col"></th>
            </tr>

        </thead>
        <tbody>
            @foreach (var plant in Model.Plants)
            {
                <tr>
                    <th scope="row">@plant.PlantId</th>
                    <td>@plant.Name</td>
                    <td>@plant.City</td>
                    <td>@plant.Address</td>
                    <td>@plant.Phone</td>
                    <td>@plant.Email</td>
                    <td><a asp-page="./Edit" asp-route-plantId="@plant.PlantId"><i class="fa fa-edit">Edit</i></a></td>
                </tr>
            }
        </tbody>
    </table>
</div>



